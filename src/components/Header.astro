---
import { siteInfomation } from "@/config";
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
---

<header>
  <a href={siteInfomation.url}>
    <Logo />
    <p>シャッチクンの<br />WEBエンジニア入門</p>
  </a>
  <!-- <Hamburger /> -->
  <Navigation />
  <ThemeIcon />
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
    a {
      display: flex;
      p {
        padding-left: 0.5rem;
        font-size: 1.25rem;
        letter-spacing: 0.05rem;
        color: var(--sub-color);
      }
    }
    .global-navigation {
      display: none;
    }
  }
  @media screen and (min-width: 50rem) {
    header {
      .global-navigation {
        display: flex;
        justify-content: space-between;
        width: fit-content;
        margin-left: auto;
        a {
          display: grid;
          place-items: center;
          height: 3rem;
          margin-left: 2rem;
          font-size: 1.2rem;
          font-weight: bold;
          text-transform: uppercase;
          &:hover,
          &:focus {
            background-color: #ff9776;
          }
        }
      }
    }
  }
</style>
