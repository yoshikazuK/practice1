</div>

<style>
  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 3rem;
    height: 3rem;
    padding: 0.5rem;
    border: solid 0.125rem var(--sub-color);
    border-radius: 0.25rem;
    background-color: var(--base-color);
    cursor: pointer;
    > span {
      display: block;
      width: 100%;
      height: 0.25rem;
      background-color: var(--sub-color);
    }
    &.active {
      position: relative;
      > span {
        position: absolute;
        top: 45%;
        left: 10%;
        width: 80%;
        &:first-of-type {
          transform: rotate(45deg);
        }
        &:nth-of-type(2) {
          display: none;
        }
        &:last-of-type {
          transform: rotate(-45deg);
        }
      }
    }
  }
</style>

<script>
  document.querySelector(".hamburger")?.addEventListener("click", () => {
    document.querySelector(".hamburger")?.classList.toggle("active");
    document.querySelector("#footer-navigation .global-navigation")?.classList.toggle("active");
  });
</script>
