---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
---

<nav id="footer-navigation">
  <Hamburger />
  <Navigation />
</nav>

<style>
  #footer-navigation {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 4rem;
    display: flex;
    justify-content: space-around;
    align-items: center;
    .global-navigation {
      opacity: 0;
      position: absolute;
      bottom: -100%;
      left: 0;
      right: 0;
      width: 80%;
      margin: 0 auto;
      transition: 500ms ease-out;
      &.active {
        opacity: 1;
        bottom: 4rem;
        background-color: var(--base-color);
        a {
          display: grid;
          place-items: center;
          width: 100%;
          height: 3rem;
          border-bottom: dotted 0.125rem var(--sub-color);
        }
      }
    }
  }
</style>
